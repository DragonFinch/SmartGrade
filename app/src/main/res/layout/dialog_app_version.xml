<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_appver_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorFFF"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="12sp"
        android:text="升级提示"
        android:textColor="#333333"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/text_appver_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorFFF"
        android:includeFontPadding="false"
        android:padding="12sp"
        android:textColor="#333333"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_appver_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/colorFFF"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="25sp" />

        <View
            android:id="@+id/line_appver_dialog"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/text_appver_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/colorFFF"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
